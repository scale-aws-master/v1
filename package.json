{
  "name": "multi-school-portal",
  "version": "1.0.0",
  "description": "A web application for managing multiple schools with role-based access control",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev:local": "NODE_ENV=development node -r dotenv/config server.js dotenv_config_path=.env.local",
    "client": "cd client && npm start",
    "dev": "nodemon server.js",
    "build": "cd client && npm install && npm run build",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}      